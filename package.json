{
  "name": "monorepo",
  "version": "1.0.0",
  "workspaces": [
    "packages/pages",
    "packages/sublimity-ui"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,json}": [
      "yarn format",
      "yarn lint"
    ]
  },
  "scripts": {
    "start:frontend": "yarn workspace pages dev",
    "start:storybook": "yarn workspace sublimity-ui storybook",
    "format": "prettier --write",
    "format:all": "prettier --write \"packages/**/*.{js,jsx,ts,tsx,json}\"",
    "lint": "eslint --fix",
    "lint:all": "eslint --fix \"packages/**/*.{js,jsx,ts,tsx,json}\"",
    "updateSDKs": "yarn dlx @yarnpkg/sdks vscode"
  },
  "devDependencies": {
    "@types/styled-components": "^5.1.14",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^6.1.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.1.2",
    "pinst": "^2.0.0",
    "prettier": "^2.4.1",
    "typescript": "^4.4.3"
  }
}
