{
  "name": "monorepo",
  "version": "1.0.0",
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,json}": [
      "yarn format",
      "yarn lint"
    ]
  },
  "scripts": {
    "start:frontend": "yarn workspace kevin-carlos.github.io start",
    "start:storybook": "yarn workspace sublimity-ui storybook",
    "format": "prettier --write",
    "format:all": "prettier --write \"packages/**/*.{js,jsx,ts,tsx,json}\"",
    "lint": "eslint --fix",
    "lint:all": "eslint --fix \"packages/**/*.{js,jsx,ts,tsx,json}\"",
    "updateSDKs": "yarn dlx @yarnpkg/sdks vscode"
  },
  "devDependencies": {
    "@types/styled-components": "^5.1.14",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^7.0.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "pinst": "^2.0.0",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  },
  "packageManager": "yarn@3.1.1"
}
